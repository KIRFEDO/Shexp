<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/EILI_ownerAvatar"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_2"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/purple_200"
                app:strokeWidth="2sp"
                android:layout_marginLeft="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minWidth="150sp"
                android:layout_marginLeft="10sp">

                <TextView
                    android:id="@+id/EILI_eventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENT_ITEM_NAME"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="220sp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/EILI_ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="OWNER"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/EILI_itemCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/dollar"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>